@model OnePage2ABussiness.References.Models.UpdateReferencesModel

<div class="modal-header">
    <h5 class="modal-title" id="editReferencesModalLabel">Referans Düzenle</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
</div>
<div class="modal-body">
    <form id="editReferencesForm" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="mb-3">
            <label for="Title" class="form-label">Başlık</label>
            @Html.TextBoxFor(m => m.ReferemcesTitle, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            <label for="ImageFile" class="form-label">Yeni Fotoğraf Yükle</label>
            <input type="file" name="ImageFile" id="ImageFile" class="form-control" />
        </div>

        @if (!string.IsNullOrEmpty(Model.ImgUrl))
        {
            <div class="mb-3 text-center">
                <label class="form-label">Mevcut Fotoğraf:</label><br />
                <img src="@Model.ImgUrl" alt="Referans" class="img-fluid rounded" style="max-width: 50%;" />
            </div>
        }
    </form>
</div>
<div class="modal-footer">
    <button type="submit" form="editReferencesForm" class="btn btn-primary">Güncelle</button>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
</div>
