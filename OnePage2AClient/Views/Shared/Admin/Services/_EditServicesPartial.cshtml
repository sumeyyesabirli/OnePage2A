@model OnePage2ABussiness.Services.Models.UpdateServiceModel

<div class="modal-header">
    <h5 class="modal-title" id="editServicesModalLabel">Hizmetler Düzenle</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
</div>
<div class="modal-body">
    <form id="editServicesForm" action="@Url.Action("EditServices", "Services")" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="mb-3">
            <label for="ServicesTitle" class="form-label">Başlık</label>
            @Html.TextBoxFor(m => m.ServicesTitle, new { @class = "form-control", id = "ServicesTitle" })
        </div>

        <div class="mb-3">
            <label for="ServicesDescription" class="form-label">İçerik</label>
            @Html.TextAreaFor(m => m.ServicesDescription, new { @class = "form-control", rows = "4", id = "ServicesDescription" })
        </div>

        <div class="mb-3">
            <label for="ImageFile" class="form-label">Yeni Fotoğraf Yükle (İsteğe Bağlı)</label>
            <input type="file" name="ImageFile" id="ImageFile" class="form-control" />
        </div>

        @if (!string.IsNullOrEmpty(Model.ImgUrl))
        {
            <div class="mb-3 text-center">
                <label class="form-label">Mevcut Fotoğraf:</label><br />
                <img src="@Model.ImgUrl" alt="@Model.ServicesTitle" class="img-fluid rounded" style="max-width: 50%;" />
            </div>
        }
    </form>
</div>
<div class="modal-footer">
    <button type="submit" form="editServicesForm" class="btn btn-primary">Güncelle</button>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
</div>
