@model OnePage2ABussiness.AboutUs.Models.UpdateAboutUsModel

<div class="modal-header">
    <h5 class="modal-title" id="editAboutUsModalLabel">AboutUs Düzenle</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
</div>
<div class="modal-body">
    <form id="editAboutUsForm" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="mb-3">
            <label for="AboutUsDescription" class="form-label">Başlık</label>
            @Html.TextAreaFor(m => m.AboutUsDescription, new { @class = "form-control", rows = 4, placeholder = "Açıklamanızı buraya yazın..." })
        </div>


        <div class="mb-3">
            <label for="ImageFile" class="form-label">Yeni Fotoğraf Yükle (İsteğe Bağlı)</label>
            <input type="file" name="ImageFile" id="ImageFile" class="form-control" />
        </div>

    
            <div class="mb-3 text-center">
                <label class="form-label">Mevcut Fotoğraf:</label><br />
                <img src="@Model.ImgUrl" alt="Hakkmızda Fotoğraf" class="img-fluid rounded" style="max-width: 50%;" />
            </div>
      
    </form>
</div>
<div class="modal-footer">
    <button type="submit" form="editAboutUsForm" class="btn btn-primary">Güncelle</button>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
</div>
