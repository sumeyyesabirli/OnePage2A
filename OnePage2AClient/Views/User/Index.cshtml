@model List<OnePage2AEntity.Entites.User>

@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<h2>Kullanıcı Listesi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>E-posta</th>
            <th>Rol</th>
            <th>Oluşturan</th>
            <th>Oluşturulma Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@user.CreatedByName</td>
                <td>@user.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <!-- İşlem butonları -->
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
