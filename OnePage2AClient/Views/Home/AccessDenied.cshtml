
@{
    ViewData["Title"] = "AccessDenied";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
    string returnUrl = ViewBag.ReturnUrl as string;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <title>Erişim Engellendi - 2A Baskı Malzemeleri</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Erişim Engellendi</h1>
        <div class="alert alert-danger text-center">
            Bu sayfaya erişim yetkiniz yok.
        </div>
        @if (!string.IsNullOrEmpty(returnUrl))
        {
            <div class="text-center">
                <p>Erişmeye çalıştığınız sayfa: <strong>@returnUrl</strong></p>
            </div>
        }
        <div class="text-center mt-3">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Ana Sayfaya Dön</a>
        </div>
    </div>
</body>
</html>

